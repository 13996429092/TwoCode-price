<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaowenshuma.twocode.com.xiaowenshuma.price.MainActivity">

    <TextView
        android:text="你现在拥有的0个产品"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="30dp"
        android:id="@+id/tv_showpasswordcount" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal">
      <ImageView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:src="@drawable/ico_sys"
          android:id="@+id/img_sys"
          android:layout_weight="1"
          android:layout_marginRight="10dp"/>

      <EditText
          android:hint="扫一扫"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:id="@+id/et_number"

          android:layout_weight="3" />



  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:hint="价格"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginRight="10dp"
            android:layout_weight="1" />

        <EditText
            android:hint="输入价格/查询到价格"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/et_password"
            android:inputType="numberDecimal"

            android:layout_weight="3" />





    </LinearLayout>
    <Button
        android:hint="保存价格"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_save"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

</LinearLayout>
